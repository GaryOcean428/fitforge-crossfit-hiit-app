{
  "version": "1",
  "metadata": {
    "name": "muscles-crossfit-api"
  },
  "build": {
    "provider": "python", 
    "steps": {
      "install": {
        "commands": [
          "pip install --upgrade pip",
          "pip install -r requirements.txt"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn src.main:app --bind 0.0.0.0:${PORT:-5000} --workers 4 --timeout 120",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE", 
    "restartPolicyMaxRetries": 3
  }
}
