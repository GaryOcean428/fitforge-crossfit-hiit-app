{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.11",
    "node": "20"
  },
  "buildAptPackages": [
    "libpq-dev",
    "build-essential",
    "curl",
    "git"
  ],
  "steps": {
    "install-python": {
      "commands": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ],
      "caches": ["pip-cache"]
    },
    "install-frontend": {
      "commands": [
        "cd ../../frontend/crossfit-web",
        "npm install -g pnpm",
        "pnpm install --frozen-lockfile"
      ],
      "caches": ["pnpm-cache", "node-modules-cache"]
    },
    "build-frontend": {
      "inputs": [{ "step": "install-frontend" }],
      "commands": [
        "cd ../../frontend/crossfit-web",
        "pnpm run build"
      ],
      "caches": ["vite-cache"]
    },
    "setup": {
      "inputs": [{ "step": "install-python" }, { "step": "build-frontend" }],
      "commands": [
        "mkdir -p src/database",
        "mkdir -p src/static",
        "cp -r ../../frontend/crossfit-web/dist/* src/static/ || echo 'Frontend build not found, continuing...'",
        "echo 'Setup completed'"
      ]
    }
  },
  "caches": {
    "pip-cache": {
      "directory": "/root/.cache/pip",
      "type": "shared"
    },
    "pnpm-cache": {
      "directory": "/root/.local/share/pnpm/store",
      "type": "shared"
    },
    "node-modules-cache": {
      "directory": "../../frontend/crossfit-web/node_modules/.cache",
      "type": "shared"
    },
    "vite-cache": {
      "directory": "../../frontend/crossfit-web/.vite/cache",
      "type": "shared"
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/railwayapp/railpack-runtime:latest"
    },
    "aptPackages": ["libpq5"],
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 4 --timeout 120 src.main:app",
    "variables": {
      "PYTHONUNBUFFERED": "1",
      "PYTHONDONTWRITEBYTECODE": "1",
      "FLASK_ENV": "production",
      "PORT": "5000"
    },
    "inputs": [
      {
        "step": "setup",
        "include": ["."]
      }
    ]
  }
}

