{
  "name": "muscles-monorepo",
  "version": "1.0.0",
  "description": "CrossFit muscles application - monolithic Flask + React deployment",
  "private": true,
  "workspaces": [
    "frontend/crossfit-web",
    "backend/crossfit-api"
  ],
  "scripts": {
    "railpack:build": "railpack build",
    "railpack:dev": "railpack dev --config railpack.development.json",
    "railpack:deploy": "railpack deploy --config railpack.production.json",
    "railpack:validate": "railpack validate",
    "railpack:logs": "railpack logs --follow",
    "install:frontend": "cd frontend/crossfit-web && pnpm install",
    "install:backend": "cd backend/crossfit-api && pip install -r requirements.txt",
    "build:frontend": "cd frontend/crossfit-web && pnpm build",
    "test:backend": "cd backend/crossfit-api && python -m pytest tests/",
    "dev:frontend": "cd frontend/crossfit-web && pnpm dev",
    "dev:backend": "cd backend/crossfit-api && python src/main.py"
  },
  "engines": {
    "node": ">=20",
    "python": ">=3.11"
  },
  "packageManager": "pnpm@10.4.1"
}