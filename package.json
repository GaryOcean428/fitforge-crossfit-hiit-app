{
  "name": "muscles-monorepo",
  "version": "1.0.0",
  "description": "Muscles HIIT application - monolithic Flask + React deployment",
  "private": true,
  "workspaces": [
    "frontend/web",
    "backend/api"
  ],
  "scripts": {
    "install:frontend": "cd frontend/web && npm install",
    "install:backend": "cd backend/api && pip install -r requirements.txt",
    "build:frontend": "cd frontend/web && npm run build",
    "test:backend": "cd backend/api && python -m pytest tests/unit/test_simple.py -v",
    "lint:frontend": "cd frontend/web && npm run lint",
    "type-check:backend": "cd backend/api && mypy src/main.py",
    "dev:frontend": "cd frontend/web && npm run dev",
    "dev:backend": "cd backend/api && python src/main.py",
    "validate": "./validate_deployment.sh"
  },
  "engines": {
    "node": ">=20",
    "python": ">=3.11"
  }
}