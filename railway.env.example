# Railway Environment Variables for Railpack Configuration
# Copy these to your Railway project settings to force Railpack usage

# Force Railway to use Railpack instead of Dockerfile
RAILWAY_USE_RAILPACK=true
RAILWAY_BUILDER_BP_USE_RAILPACK=1

# Disable Dockerfile detection
RAILWAY_DOCKERFILE_PATH=""

# Python-specific settings
PYTHON_VERSION=3.11
PORT=8000

# Required application environment variables
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
DATABASE_URL=your-postgresql-url-here

# Optional application variables
OPENAI_API_KEY=your-openai-api-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here
REDIS_URL=your-redis-url-here

# Railway-specific debugging
RAILWAY_VERBOSE=1