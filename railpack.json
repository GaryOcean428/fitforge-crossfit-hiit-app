{
  "version": "1",
  "metadata": {
    "name": "muscles"
  },
  "build": {
    "provider": "python",
    "steps": {
      "install": {
        "commands": [
          "pip install --upgrade pip",
          "pip install -r requirements.txt"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn src.main:app --bind 0.0.0.0:${PORT:-8000} --workers 4",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300
  }
}
