{
  "version": "1",
  "metadata": {
    "name": "muscles-backend"
  },
  "build": {
    "provider": "python",
    "root": "backend/api",
    "steps": {
      "install": {
        "commands": [
          "cd backend/api",
          "python -m pip install --upgrade pip",
          "pip install -r requirements.txt"
        ]
      }
    }
  },
  "deploy": {
    "startCommand": "cd backend/api && gunicorn --chdir . src.main:app --bind 0.0.0.0:${PORT:-5000} --workers 4 --timeout 120 --log-level info",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
